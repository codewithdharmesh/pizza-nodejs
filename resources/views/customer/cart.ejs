<section class="cart py-16">
    

    <% if(session.cart) {%>

<div class="order container mx-auto w-1/2">
    <div class="border-b-gray-300 pb-4">
        <h1 class="font-bold text-2xl">order summary</h1>
    </div>






    <div class="pizza-list">

        <% for(let pizza of Object.values(session.cart.items)) { %>
        <div class="flex items-center my-8">
            <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza">
        
        <div class="flex-1 ml-4">
            <h1><%= pizza.item.name %></h1>
            <span><%= pizza.item.size %></span>
        </div>
        <span class="flex-1"><%= pizza.qty %> Pcs</span>
        <span class="font-bold text-lg ">$<%= pizza.item.price * pizza.qty %></span>
    </div>

    <% } %> 
 

  </div>



    <hr>
    <div class="text-right py-4">
        <div>
            <span class="text-lg font-bold">Total amount:</span>
            <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %></span>
        </div>
            <div>
                <form class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="phone">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="address">
                    <div>
                         <button class="btn-primary px-6 py-2 rounded-full text-white font-bold" type="submit">Order now</button>

                    </div>
                </form>
            </div>

            <a href="" class="innline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold">Login to continue</a>

    </div>

</div>

<% } else {%>

        <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class=""> cart EmptyðŸ˜Š   </h1>
            <p class="text-gray-500 text-lg mb-12">you probably haven't ordered yet</p>
            <img class="w-2/6 mx-auto" src="/img/empty-cart.jpg" alt="cart empty">
    
           <button> <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary   ">Go back</a></button>
        </div>
    </div>
    <% } %>

</section>